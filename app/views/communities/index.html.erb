<div class = "commleft">
<% if user_signed_in? %>
<div class="float-right">
    <%= link_to "Create New Community", new_community_path, class: "btn btn-primary mt-4 buttondown commbutton" %>
</div>
<% end %>

Communities:
<% if @communities.size > 0 %>
<% @communities.each do |community| %>

<div class="cards cards1">

<h3 class = "commname"><%= link_to community.name, community %></h3>
<span class = "fontsmall"> Summary: <%= simple_format community.summary %> </span>
<span class = "fontsmall"> Rules: <%= simple_format community.rules %> </span>
</div>

<% end %>
<% else %>
    <p>No communities to display</p>
<% end %>
</div>

<div class = "twobuttons upcoming"><%= link_to "Popular Posts", public_path, class: "btn btn-primary mt-4 twobuttons topcommbutton"%> </div>


