<div class="row">
    <div class="col-sm-6">
      *All fields should be less than 50 characters
        <%= form_for @community do |form| %>
            <div class="form-group">
                <%= label_tag :name %>
                <%= form.text_field :name, class: "form-control"%>
            </div>



            <div class="form-group">
                <%= label_tag :summary %>
                <%= form.text_field :summary, class: "form-control"%>
            </div>

            <div class="form-group">
                <%= label_tag :rules %>
                <%= form.text_area :rules, class: "form-control"%>
            </div>

            <%= form.submit "Submit", class:"btn btn-primary"%>
        <% end %>
    </div>
</div>
